.homeContent
  
  .homeContent__left
    .homeContent__left__head 最新の投稿
    - @blog[0..6].each do |blog|
      .blogBox
        .blogBox__content
          .blogBox__content__title
            Title
            = link_to "#{blog.title}", admin_blog_path(blog.id), class: 'blog__page'
          .blogBox__content__createtime
            Created At
            = blog.created_at
    .homeContent__left__foot
      = link_to 'ALL', admin_blogs_path, class: 'blog__all'


  .homeContent__center
    .homeContent__center__head 最新の投稿
    -# - @blog[0..6].each do |blog|
      .galleryBox
        .galeryBox__content
          .galleryBox__content__title
            Title
            = link_to "#{blog.title}", admin_blog_path(blog.id), class: 'blog__page'
          .galleryBox__content__createtime
            Created At
            = blog.created_at
    .homeContent__center__foot
      = link_to 'ALL', '#', class: 'gallery__all'


  .homeContent__right
    %ul.nav__edit
      %li= link_to 'HOME', root_path , class: 'home__page'
      %li= link_to 'BLOG', new_admin_blog_path, class: 'blog__page'
      %li= link_to 'GALLERY', new_admin_gallery_path, class: 'gallery__page'
      %li= link_to 'SHOP', '#', class: 'shop__page'
      - if current_user.admin?
        %li= link_to 'ADMIN', user_path(current_user), class: 'admin__page'
        %li= link_to 'BLOG', new_admin_blog_path, class: 'write__blog'
      - else
        %li= link_to 'MYPAGE', user_path(current_user.id), class: 'my__page'

      %li= link_to 'LOGOUT', destroy_user_session_path, method: :delete, class: 'log__out'
